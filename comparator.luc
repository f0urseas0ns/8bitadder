module comparator (
    input clk,
    input rst,
    input z[8], //zero 
    input v[8], //overflow
    input n[8], //negative
    input alufn[2], //to take in alufn1 and alufn2
    output out[8]
  ) {
  
   .clk(clk){
    .rst(rst){}
  }
  
  always {
    out = 0;
    if (alufn == b01) out = z; //compare if A=B
    if (alufn == b10) out = n ^ v; //compare if A<B
    if (alufn == b11) out = z | (n^v); //compare A <=B    
    
  }
    
}
